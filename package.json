  "exports": {
    "./package.json": "./package.json",
    ".": {
      "browser": "./dist/buffer.global.js",
      "import": {
        "default": "./dist/buffer.mjs",
        "types": "./dist/buffer.d.mts"
      },
      "require": {
        "default": "./dist/buffer.js",
        "types": "./dist/buffer.d.ts"
      }
    }
